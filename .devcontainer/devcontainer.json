{
  "name": "Gowatch",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/gowatch,type=bind,consistency=cached",
  "workspaceFolder": "/gowatch",
  "settings": {
    "go.toolsManagement.checkForUpdates": "local",
    "go.useLanguageServer": true,
    "go.gopath": "/go",
    "go.goroot": "/usr/local/go"
  },
  "extensions": [
    "golang.Go",
    "editorconfig.editorconfig",
    "eamodio.gitlens"
  ],
}
